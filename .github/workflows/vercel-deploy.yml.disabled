name: Deploy to Vercel

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
  workflow_dispatch: # Allow manual triggering

env:
  NODE_VERSION: '18'

jobs:
  test:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout KFL repository
      uses: actions/checkout@v4
    
    - name: Set up Node.js
      uses: actions/setup-node@v4
      with:
        node-version: ${{ env.NODE_VERSION }}
        cache: 'npm'
    
    - name: Install dependencies
      run: npm install
    
    - name: Build for production
      run: npm run build
      env:
        VITE_API_URL: ""  # Use mock API
    
    - name: Test build
      run: |
        if [ ! -d "build" ]; then
          echo "Build failed - no build directory found"
          exit 1
        fi
        echo "Build successful - $(du -sh build | cut -f1) size"

  deploy-vercel:
    needs: test
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main'
    
    steps:
    - name: Checkout KFL repository
      uses: actions/checkout@v4
    
    - name: Deploy to Vercel
      uses: amondnet/vercel-action@v25
      with:
        vercel-token: ${{ secrets.VERCEL_TOKEN }}
        vercel-org-id: ${{ secrets.VERCEL_ORG_ID }}
        vercel-project-id: ${{ secrets.VERCEL_PROJECT_ID }}
        working-directory: ./
        vercel-args: '--prod'
    
    - name: Notify Vercel deployment success
      if: success()
      run: |
        echo "‚úÖ KFL project successfully deployed to Vercel"
        echo "üåê Website: https://kfl-karshakfoodlife.vercel.app"
        echo "üì± PWA features: Installable, offline support"
        echo "üîß Mock API: Working with sample data"
    
    - name: Notify Vercel deployment failure
      if: failure()
      run: |
        echo "‚ùå Vercel deployment failed"
        echo "Check the logs above for details"
        echo "Common issues:"
        echo "- Vercel token not configured"
        echo "- Org ID or Project ID not configured"
        echo "- Build failed"
