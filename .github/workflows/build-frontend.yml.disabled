name: Build and Deploy Frontend (DISABLED)

on:
  workflow_dispatch: # Manual trigger only - SSH deployment disabled

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    
    steps:
    - uses: actions/checkout@v3
    
    - name: Set up Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '18'
        cache: 'npm'
    
    - name: Install dependencies
      run: npm install
    
    - name: Build for production
      run: npm run build
      env:
        VITE_API_URL: ""  # Use mock API
    
    - name: Test build
      run: |
        if [ ! -d "build" ]; then
          echo "Build failed - no build directory found"
          exit 1
        fi
        echo "Build successful - $(du -sh build | cut -f1) size"
    
    - name: Deploy to server (DISABLED)
      if: false  # This step is disabled
      uses: appleboy/ssh-action@v0.1.5
      with:
        host: ${{ secrets.HOST }}
        username: ${{ secrets.USERNAME }}
        key: ${{ secrets.SSH_KEY }}
        script: |
          echo "SSH deployment is disabled"
          echo "Use Vercel or Netlify deployment instead"