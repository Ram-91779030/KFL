name: Deploy to Netlify

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
  workflow_dispatch: # Allow manual triggering

env:
  NODE_VERSION: '18'

jobs:
  test:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout KFL repository
      uses: actions/checkout@v4
    
    - name: Set up Node.js
      uses: actions/setup-node@v4
      with:
        node-version: ${{ env.NODE_VERSION }}
        cache: 'npm'
    
    - name: Install dependencies
      run: npm install
    
    - name: Build for production
      run: npm run build
      env:
        VITE_API_URL: ""  # Use mock API
    
    - name: Test build
      run: |
        if [ ! -d "build" ]; then
          echo "Build failed - no build directory found"
          exit 1
        fi
        echo "Build successful - $(du -sh build | cut -f1) size"

  deploy-netlify:
    needs: test
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main'
    
    steps:
    - name: Checkout KFL repository
      uses: actions/checkout@v4
    
    - name: Set up Node.js
      uses: actions/setup-node@v4
      with:
        node-version: ${{ env.NODE_VERSION }}
        cache: 'npm'
    
    - name: Install dependencies
      run: npm install
    
    - name: Build for production
      run: npm run build
      env:
        VITE_API_URL: ""  # Use mock API
    
    - name: Deploy to Netlify
      uses: nwtgck/actions-netlify@v3.0
      with:
        publish-dir: './build'
        production-branch: main
        github-token: ${{ secrets.GITHUB_TOKEN }}
        deploy-message: "Deploy from GitHub Actions - ${{ github.sha }}"
        enable-pull-request-comment: false
        enable-commit-comment: true
        overwrites-pull-request-comment: true
      env:
        NETLIFY_AUTH_TOKEN: ${{ secrets.NETLIFY_AUTH_TOKEN }}
        NETLIFY_SITE_ID: ${{ secrets.NETLIFY_SITE_ID }}
    
    - name: Notify Netlify deployment success
      if: success()
      run: |
        echo "‚úÖ KFL project successfully deployed to Netlify"
        echo "üåê Website: https://kfl-karshakfoodlife.netlify.app"
        echo "üì± PWA features: Installable, offline support"
        echo "üîß Mock API: Working with sample data"
        echo "üéØ Custom domain: Add ogbar.in in Netlify dashboard"
    
    - name: Notify Netlify deployment failure
      if: failure()
      run: |
        echo "‚ùå Netlify deployment failed"
        echo "Check the logs above for details"
        echo "Common issues:"
        echo "- Netlify token not configured"
        echo "- Site ID not configured"
        echo "- Build failed"
        echo "- Missing dependencies"
